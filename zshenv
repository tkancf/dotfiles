# Environment configuration that should apply to every Zsh invocation.
export ZDOTDIR="$HOME/.config/dotfiles/config/zsh"

# History file configuration
HISTFILE=~/.histfile
HISTSIZE=1000000
SAVEHIST=1000000

# Locale and editor defaults
export LC_ALL="en_US.UTF-8"
export VISUAL="nvim"
export EDITOR="nvim"
